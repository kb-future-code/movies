{% extends 'base.html.twig' %}

{% form_theme form 'form/theme.html.twig' %}

{% trans_default_domain 'movie' %}

{% block title %}{{ 'Movies'|trans }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row text-center">
            <div class="col">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-secondary btn-lg btn-block text-white">{{ 'Search'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
        {% if movies|length %}
            <div class="row">
                <table class="table">
                    <tr>
                        <th>{{ 'Image'|trans }}</th>
                        <th>{{ 'Title'|trans }}</th>
                        <th>{{ 'Year'|trans }}</th>
                        <th>{{ 'Type'|trans }}</th>
                    </tr>

                    {% for movie in movies %}
                        <tr>
                            <td>
                                {% if movie.Poster != 'N/A' %}
                                    <a class="open-modal" href="{{ movie.Poster }}">
                                        <img class="img-thumbnail img-responsive" style="max-height: 100px" src="{{ movie.Poster }}" alt="{{ movie.Title }}">
                                    </a>
                                {% else %}
                                    <img class="img-thumbnail img-responsive" style="max-height: 100px" src="{{ asset('assets/img/default.png') }}" alt="{{ 'Default'|trans }}">
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('movie_show', {id: movie.imdbID}) }}" role="button">
                                    {{ movie.Title }}
                                </a>
                            </td>
                            <td>{{ movie.Year }}</td>
                            <td>{{ movie.Type }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="d-flex justify-content-center w-100">
                <ul class="pagination">
                    {% if paginator.showPrevious %}
                        {% include 'movie/_paginator_item.html.twig' with {label: 'Previous', page: page-1, actualPage: page} %}
                    {% endif %}
                    {% if paginator.showFirst %}
                        {% include 'movie/_paginator_item.html.twig' with {label: 1, page: 1, actualPage: page} %}
                    {% endif %}
                    {% for i in paginator.start..paginator.end %}
                        {% include 'movie/_paginator_item.html.twig' with {label: i, page: i, actualPage: page} %}
                    {% endfor %}
                    {% if paginator.showNext %}
                        {% include 'movie/_paginator_item.html.twig' with {label: 'Next', page: page + 1, actualPage: page} %}
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}
